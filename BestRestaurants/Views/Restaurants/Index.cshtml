@{
  Layout = "_Layout";
}

@using BestRestaurants.Models

<h1>Restaurants:</h1>

@if (@Model.Count == 0)
{
  <h3>No Restaurants are in this database</h3>
}

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Show", new { id = restaurant.RestaurantId })</li>
}
<br>
<p>@Html.ActionLink("Add new Restaurant", "Create")</p>
<br>
<p>@Html.ActionLink("See By Cuisines", "Index", "Cuisines")</p>