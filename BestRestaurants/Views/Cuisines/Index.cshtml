@{
  Layout = "_Layout";
}

@using BestRestaurants.Models

<h1>Cuisines:</h1>

@if(@Model.Count == 0)
{
  <h3>No Cuisines are in this database</h3>
}

@foreach (Cuisine cuisine in Model)
{
    <li>@Html.ActionLink($"{cuisine.Type}", "Show", new { id = cuisine.CuisineId })</li>
}
<br>
<p>@Html.ActionLink("Add new Cuisine", "Create")</p>
<br>
<p>@Html.ActionLink("See By Restaurants", "Index", "Restaurants")</p>